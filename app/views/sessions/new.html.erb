<div style="max-width: 500px; margin: 0 auto;">
  <h2>Увійти в систему</h2>
  
  <%= form_with url: login_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :nickname, "Нікнейм" %>
      <%= form.text_field :nickname, placeholder: "Введіть ваш нікнейм", class: 'form-control', required: true %>
      <small style="color: #6c757d; display: block; margin-top: 5px;">
        Введіть нікнейм, під яким ви зареєстровані
      </small>
    </div>

    <div class="form-actions">
      <%= form.submit 'Увійти', class: 'btn btn-primary' %>
      <%= link_to 'Створити новий акаунт', new_user_path, class: 'btn btn-secondary' %>
      <%= link_to 'Назад', root_path, class: 'back-link' %>
    </div>
  <% end %>
</div>
